<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/arriba"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#00CA2C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/textosuperior"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:text="Martín Ricardo Cabello Rodíguez"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintVertical_bias="0.18"
        app:layout_constraintTop_toTopOf="@id/arriba"
        app:layout_constraintBottom_toBottomOf="@id/arriba"
        app:layout_constraintStart_toStartOf="@id/arriba"
        app:layout_constraintEnd_toEndOf="@id/arriba"
        />

    <TextView
        android:id="@+id/textoinferior"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:text="Práctica 1"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toBottomOf="@+id/arriba"
        app:layout_constraintEnd_toEndOf="@id/arriba"
        app:layout_constraintStart_toStartOf="@id/arriba"
        app:layout_constraintTop_toBottomOf="@id/textosuperior" />

    <TextView
        android:id="@+id/mid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@id/abajo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/arriba"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/n1"
        android:layout_width="45dp"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@+id/arriba"
        app:layout_constraintBottom_toTopOf="@id/abajo"
        app:layout_constraintStart_toStartOf="@id/mid"
        app:layout_constraintEnd_toStartOf="@+id/n2"
        android:background="#00F6FF"
        />

    <TextView
        android:id="@+id/n2"
        android:layout_width="45dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/arriba"
        app:layout_constraintBottom_toTopOf="@id/abajo"
        app:layout_constraintStart_toEndOf="@+id/n1"
        app:layout_constraintEnd_toStartOf="@id/n3"
        android:background="#00F6FF"
        />

    <TextView
        android:id="@+id/n3"
        android:layout_width="45dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/arriba"
        app:layout_constraintBottom_toTopOf="@id/abajo"
        app:layout_constraintStart_toEndOf="@+id/n2"
        app:layout_constraintEnd_toEndOf="@id/mid"
        android:background="#00F6FF"
        />

    <TextView
        android:id="@+id/abajo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#FF0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1" />

</androidx.constraintlayout.widget.ConstraintLayout>